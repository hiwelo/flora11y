{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/__stories__/**",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  }
}
